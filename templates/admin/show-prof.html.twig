<div class="container" style="margin-right: 25%;"><br>
    <h1> La Liste des Professeurs :</h1><br>
    <table  id="tab" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>CIN</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Carte Bank</th>
                <th>Salaire</th>
                <th>Matiére</th>
                <th>Edit/Détail/X</th> 
            </tr>
        </thead>    
        <tbody>
            {% for pp in prof %}
            <tr>
                <td>{{ pp.nomProf }}</td>
                <td>{{ pp.prenomProf }}</td>
                <td>{{ pp.emailProf }}</td>
                <td>{{ pp.cinProf }}</td>
                <td>{{ pp.numTeleProf }}</td>
                <td>{{ pp.adresseProf }}</td>
                <td>{{ pp.numCarteBankProf }}</td>
                <td>{{ pp.salaireProf }}</td>
                <td>{{ pp.profMatiere }}</td>
                <td>
                    <a href="{{ path('prof_edit', {'id': pp.id}) }}" class="btn btn-dark">edit</a>
                    <a href="{{ path('prof_detail', {'id': pp.id}) }}" class="btn btn-light">détail</a>
                    <a href="#" class="btn btn-danger delete-proff" data-id="{{ pp.id }}">Delete</a>
                </td>

            </tr>
        {% endfor %}
            <tfoot>
                <tr>
                    <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>CIN</th>
                        <th>Téléphone</th>
                        <th>Adresse</th>
                        <th>Carte Bank</th>
                        <th>Salaire</th>
                        <th>Matiére</th>
                        <th>Edit/Détail/X</th>
                </tr>
            </tfoot>
        </tbody>    
    </table>    

</div>
